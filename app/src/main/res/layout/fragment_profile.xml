<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7F9"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/profileImageCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="75dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2">

        <ImageButton
            android:id="@+id/uploadImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_person_24" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/usernameTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/profileImageCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@example.com"
        android:textSize="16sp"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/usernameTextView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/updateProfileButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/updateProfile"
        android:textColor="#000000"
        android:backgroundTint="#E0E0E0"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/emailTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/historyBut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/history"
        android:textColor="#000000"
        android:backgroundTint="#E0E0E0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/updateProfileButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/favoriteBut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/favorite"
        android:textColor="#000000"
        android:backgroundTint="#E0E0E0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/historyBut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/myProductsBut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/myProducts"
        android:textColor="#000000"
        android:backgroundTint="#E0E0E0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/favoriteBut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/adminPanelBut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Admin panel"
        android:textColor="#000000"
        android:backgroundTint="#E0E0E0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/myProductsBut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/languageButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/language"
        android:textColor="#000000"
        android:backgroundTint="#E0E0E0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/adminPanelBut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/delete_account"
        android:textColor="#000000"
        android:backgroundTint="#E0E0E0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/languageButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:textColor="#000000"
        android:backgroundTint="#E0E0E0"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/deleteAccountButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>